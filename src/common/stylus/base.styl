body, html
  line-height: 1
  font-weight: 200
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif

.clearfix
  display: inline-block
  &::after
    content: "."
    display: block
    clear: both
    height: 0
    line-height: 0
    visibility: hidden


@media (-webkit-min-deice-pixel-ratio: 1.5), (min-deice-pixel-ratio: 1.5)
  .border-1px
    &:after
      -webkit-transform: scaleY(0.7)
      transform: scaleY(0.7)

@media (-webkit-min-deice-pixel-ratio: 2), (min-deice-pixel-ratio: 2)
  .border-1px
    &:after
      -webkit-transform: scaleY(0.5)
      transform: scaleY(0.5)
